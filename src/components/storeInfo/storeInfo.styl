@import '../../common/stylus/mixin.styl'
.store_info
   width: 100%
   height: 100%
   background:rgba(7,17,27,.8);
   position: fixed
   left: 0px
   top: 0px
   z-index: 100
   overflow: auto
   color: white
   .info_main
     margin-top: 164px;
     padding-bottom: 64px;
     .name
       text-align: center
       font-size: 16px
       line-height: 16px
     .info_star
       text-align: center  
       margin-top: 10px
     .title 
       width: 80%
       display: flex
       margin:  24px auto 10px auto
       .line
         flex: 1
         position: relative
         top:10px
         border-top: 1px solid hsla(0,0%,100%,.2)
       .text
         margin: 0 10px 0 10px      
     .support
        width: 80%;
        margin: 22px auto
        .support_item
          font-size: 0px
          margin-bottom: 12px
          .icon
            width: 16px
            height: 16px
            background-size: 16px
          .text
            font-size: 12px
            line-height: 12px
     .bulletin
        text-align: center  
         
